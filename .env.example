# ============================================
# Environment Variables for Proplast Backend
# ============================================
# Copy this file to .env and fill in the values
# For production, use a strong JWT_SECRET
# ============================================

# ============================================
# Application
# ============================================
NODE_ENV=production
PORT=3000
APP_PORT=3000

# ============================================
# Database (Serverless PostgreSQL)
# ============================================
# Format: postgresql://user:password@host:port/database
# Example for Render: postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# PostgreSQL (for local development with Docker)
# ============================================
POSTGRES_USER=proplast
POSTGRES_PASSWORD=proplast_password
POSTGRES_DB=proplast

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# ============================================
# CORS (optional - allow specific origins)
# ============================================
# CORS_ORIGIN=https://your-frontend-domain.com
